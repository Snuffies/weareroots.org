extends ../layout/city

block content

  div#hello.rowbar-one
      div.container
        div.row
          div.col-lg-8.col-lg-offset-2.centered
            h1 SKG Tech
            h2 THESSALONIKI DEVELOPERS & TECHIES
            p This is&nbsp;
              a(href="https://github.com/skgtech/skgtech.github.io") an open website
              | &nbsp; about the community of Thessaloniki's developers and techies. Meet the community and find out about upcoming events and meetups.
        div.row
          div.col-lg-8.col-lg-offset-4.centered.share
            ul.nav
              li
                a(href="https://twitter.com/share", data-url="http://skgtech.io/", data-text="Thessaloniki Upcoming Events and Meetups", data-size="medium", via="SKG_Tech" related="SKG_Tech").twitter-share-button Tweet
              li
                a(href="https://twitter.com/SKG_Tech", data-show-count="false", data-lang="en").twitter-follow-button Follow @SKG_Tech
              li
                div(data-action="share", data-annotation="bubble", data-href="http://skgtech.io").g-plus
              li
                div(data-href="https://www.facebook.com/skgtech.io", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false", data-width="200").fb-like

  div#fb-root

  div#agenda.rowbar-two
    div.container
      div.row
        div.col-lg-10
          h3 THESSALONIKI MEETUP AGENDA
      div.row
        div#calendar-link.col-lg-10
          a(target="_blank", href="https://www.google.com/calendar/embed?src=2ul10sd9g30mnk1vpmcnnp5qv4%40group.calendar.google.com&ctz=Europe/Athens") Powered by Google Calendar
          | |
          a(target="_blank", href="https://www.google.com/calendar/feeds/2ul10sd9g30mnk1vpmcnnp5qv4%40group.calendar.google.com/public/basic") RSS
          | |
          a(target="_blank", href="https://www.google.com/calendar/ical/2ul10sd9g30mnk1vpmcnnp5qv4%40group.calendar.google.com/public/basic.ics") iCal
          | |
          a(href="/submit-event/") How to submit an event

      div#agenda-items
        div.row
          div.col-lg-10
            img(src="/assets/img/loader-bar.gif")
      div.row
