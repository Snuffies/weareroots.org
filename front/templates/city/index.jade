extends layout/city

block content

  div.city-header
    div.row
      div.col-lg-12
        div.jumbotron.text-center
          div.navbar.navbar-transparent
            div.container
              div.navbar-header
                button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
                  span.sr-only(Toggle navigation)
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
              div.navbar-collapse.collapse
                ul.nav.navbar-nav
                  li.active
                    a(href="#calendar") Calendar
                  li
                    a(href="#communities") Communities
                  li
                    a(href="#contact") Contact
          div.container
            div.row
              div.col-lg-6.col-lg-offset-3
                div.logo-wrapper
                  img(src="assets/wearetech-logo.png")
                div.city-name
                  h2 THESSALONIKI
                div.city-description
                  h3 This is an open website about the community of Thessaloniki's developers and techies. Meet the community and find out about upcoming events and meetups.
                div.social-share
                  ul.nav
                    li(style="margin-top:-7px;")
                      div(data-href="http://#{ city.hostname }", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false", data-width="200").fb-like
                    li
                      a(href="https://twitter.com/share", data-url="http://#{ city.hostname }", data-text="#{ city.name }", data-size="medium", via="#{ city.twitter }" related="#{ city.twitter }").twitter-share-button Tweet
                    li
                      div(data-action="share", data-annotation="bubble", data-href="http://#{ city.hostname }").g-plus

  div.city-events
    div.container
      div.row
        div.col-lg-8.calendar-title
          h2 Calendar of upcoming events
          p.subtle-note view on Google Calendar, RSS, iCal
        div.col-lg-4
          h2.submit-event
            img(src="/img/submit-event.png")
            | &nbsp;How to submit an event
    div.container.calendar-items-block
      div.row
        div.col-lg-10.col-md-10
        img(src="/img/loader-bar.gif")
        div.col-lg-4.calendar-item-outer
          div.calendar-item-inner
            div.calendar-item-title
              h3.date 07
                br
                span.month Nov
            h3.event-title 2nd "we are Together" event
          div.calendar-item-content
            h4 18:30-22:00 @Thessaloniki City Hall
            p All the tech communities of Thessaloniki in one place at the same time, presenting what they are passionate about in a relaxed and casual way. Let the geek inside you run wild in this pure tech mashup!
          div.calendar-item-footer
            a(href="https://twitter.com/search?f=realtime&q=%23wearetogether&src=typd", target="_blank").hashtag #wearetogether
            div.social-icons
            div.google-calendar-icons
  div.city-communities
    div.container
      div.row
        div.col-lg-12
          h2.communities-title Communities of the city
    div.container
      div.row
        div.col-lg-10.communities-block
          div.container.community
            div.row
              div.col-lg-3
                div.community-img
                  div.community-gradient
                    h3.community-title Open Coffee Thessaloniki
              div.col-lg-7
                div.community-details
                  h4.community-meetup-frequency We meet monthly every 3rd Tuesday of the month.
                  h5.community-details-subtitle What we do
                  p.community-details-subcontent OpenCoffee.gr aims to be the single point of reference for greek start-ups. In this context, we cover existing and, mainly, new developments on greek start-ups, as well as the relevant topics of entrepreneurship and technology. Moreover, the blog is the original outlet of information on the Open Coffee meetings happening around Greece, which offer a place to network and a platform for exchange that aims to inform, connect and inspire.
                  h5.community-details-subtitle Our maintainers
                  p.community-details-subcontent Georgios Gatos, Apostolos Kritikos, John Doe, Random Name, Georgios Gatos, John Doe, Random Name
                  h5.community-details-subtitle Learn more about us
                  p.community-details-subcontent
                    a(href="http://opencoffee.gr") http://opencoffee.gr
          hr
          div.container.community
            div.row
              div.col-lg-3
                div.community-img
                  div.community-gradient
                    h3.community-title Thessaloniki Node.js
              div.col-lg-7
                div.community-details
                  h4.community-meetup-frequency We meet ... whenever :)
                  h5.community-details-subtitle What we do
                  p.community-details-subcontent Thessaloniki Node.js Meetup is an initiative to connect "Noders" across Thessaloniki in order to exchange ideas, knowledge and experience.
                  h5.community-details-subtitle Our maintainers
                  p.community-details-subcontent Konstantinos Margaritis, Thanasis Polychronakis
                  h5.community-details-subtitle Learn more about us
                  p.community-details-subcontent
                    a(href="http://www.meetup.com/Thessaloniki-Node-js-Meetup") http://www.meetup.com/Thessaloniki-Node-js-Meetup
