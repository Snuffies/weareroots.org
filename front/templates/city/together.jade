extends layout/together

block content

  div.together
    div.top-section
      div.container
        div.row.main-panel
          div.col-lg-8.col-lg-offset-2
            div.row
              div.col-lg-12.inner.panel-header
                header
                  h2 #{ together.name }
            div.row
              div.col-lg-12.inner.panel-body
                div.row
                  div.col-lg-12.inner-item
                    ul
                      li
                        img(src="/img/calendar-icon.svg")
                        | #{ together.dateText }
                      li
                        img(src="/img/map-icon.svg")
                        a(href="#{ together.mapLink }", target="_blank") #{ together.venueName }
                div.row
                  div.col-lg-12.inner-item
                    p #{ together.tagline }
                div.row
                  div.col-lg-12.inner-item
                    div.social-share.pull-left
                      ul.nav
                        li
                          a(href="https://twitter.com/share", data-url="#{ city.hostname }/together", data-text="All #{ city.name } Communities in one place at the same time! #WeAreTogether", data-size="medium", via="#{ city.twitter }" related="#{ city.twitter }").twitter-share-button Tweet
                        li
                          div(data-action="share", data-annotation="bubble", data-href="#{ city.hostname }/together").g-plus
                        li
                          div(data-href="#{ city.hostname }/together", data-layout="button_count", data-action="like", data-show-faces="false", data-share="false", data-width="200").fb-like
                    div.pull-right.hashtag-nu
                      a(href="https://twitter.com/search?f=realtime&q=%23#{ together.hashtag.substr(1) }&src=typd") #{ together.hashtag }


